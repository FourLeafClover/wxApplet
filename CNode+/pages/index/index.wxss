.tagTitle {
  text-align: center;
  line-height: 2rem;
  font-size: 1rem;
  background-color: green;
  color: white;
}

.tags {
  position: absolute;
  right: 0.3rem;
  bottom: 0.3rem;
  width: 2rem;
  line-height: 2rem;
  font-size: 0.6rem;
}

.tag {
  border: 1px solid green;
  text-align: center;
  border-radius: 0.3rem;
  background-color: green;
  color: white;
  margin-top: 0.1rem;
}

.item {
  padding: 1rem;
  border-top: 1px solid gray;
}

.item .title {
  font-size: 1rem;
  font-weight: 600;
}

.item .v {
  font-size: 0.8rem;
  margin-right: 0.5rem;
  color: white;
  background-color: green;
  padding: 0.2rem;
  border-radius: 0.2rem;
}

.item .author {
  font-size: 0.8rem;
  margin-right: 0.5rem;
  color: gray;
}

.main {
  height: 100%;
  display: inline-block;
  position: absolute;
  overflow-y: auto;
}
